<div class="container">
  <h1><%= @pet.name %></h1>
  <p><%= @pet.species %></p>
  <p><%= @pet.address %></p>
  <p>Found <%= @pet.found_days_ago %> days ago</p>

  <%= link_to edit_pet_path(@pet) do %>
    <i class="fas fa-pen"></i>
  <% end %>

  <%= link_to pet_path(@pet), method: :delete, data: { confirm: "Remove #{@pet.name}?"} do %>
    <i class="fas fa-skull-crossbones"></i>
  <% end %>

  <%= link_to "All pets", root_path, class: 'btn btn-light'  %>
</div>

